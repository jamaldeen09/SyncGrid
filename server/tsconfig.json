{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDirs": ["src", "../shared"],
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "../shared/**/*"]
}
  